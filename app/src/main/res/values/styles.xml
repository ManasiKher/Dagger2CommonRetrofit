<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Full screen theme-->
    <style name="Theme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button_mango</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">42dp</item>
        <item name="android:width">220dp</item>
    </style>

    <!--Pref radio button style-->
    <style name="RadioButtonStyle">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="RadioButtonInfoStyle">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/sfprodisplay_light.otf</item>


    </style>


    <!--transparent toolbar with custom back button-->
    <!--<style name="Theme.CustomToolbar" parent="Theme.AppCompat.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:title">""</item>
    </style>-->


    <style name="CustomActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:title">""</item>
    </style>

    <style name="Header">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pref_Days">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_button_green_teal_border</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Profile_month_interaction_info">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/greyishBrownLight</item>
    </style>

    <style name="Profile_number">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/greyishBrownLight</item>
    </style>

    <style name="Profile_details">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/greyishBrownLight</item>
    </style>

    <style name="Pref_Timing">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_button_green_teal_border</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Pref_option_2_daytime_head">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/greyishBrown</item>
    </style>

    <style name="Pref_RadioButton_Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Reschedule_Top_Text">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Pref_RadioButton_Hint_Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
